{
    "version": "2.0.0",
    "tasks": [
        { // LINUX BUILD
            "type": "shell",
            "label": "Linux build",
            "command": "bash",
            "args": [
                "-c",
                "./build.sh --linux obj/linux/main"
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        { // WINDOWS BUILD 
            "type": "shell",
            "label": "Windows build",
            "command": "bash",
            "windows": {
                "options" : {
                    "CWD": "C:/msys64/mingw64/bin",
                    "MSYSTEM": "MINGW64",
                    "CHERE_INVOKING": "1"
                },
                "args": [
                    "--login",
                ]
            },
            "linux": {
                "options" : {
                    "CWD": "/usr/x86_64-w64-mingw32/bin"
                }
            },
            "args": [
                "-c",
                "./build.sh --windows obj/windows/main.exe"
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
