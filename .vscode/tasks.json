{
    "version": "2.0.0",
    "tasks": [
        { // LINUX BUILD
            "type": "process",
            "label": "Linux build",
            "command": "bash",
            "windows": {
                "command": "C:/msys64/usr/bin/bash.exe",
                "options": {
                    "CWD": "C:/msys64/usr/bin",
                    "MSYSTEM": "G++",
                    "CHERE_INVOKING": "1"
                },
            },
            "args": [
                "--login",
                "-c",
                "./build.sh --linux --clean --no-questions"
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        { // LINUX BUILD ASM
            "type": "process",
            "label": "Linux build ASM",
            "command": "bash",
            "windows": {
                "command": "C:/msys64/usr/bin/bash.exe",
                "options": {
                    "CWD": "C:/msys64/usr/bin",
                    "MSYSTEM": "G++",
                    "CHERE_INVOKING": "1"
                },
            },
            "args": [
                "--login",
                "-c",
                "./build.sh --linux --clean --no-questions --asm-output build/linux-asm/main"
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
