    "version": "0.2.0",
    "configurations": [
        {
            "preLaunchTask": "Linux build",
            "name": "Launch Linux build",
            "type": "gdb",
            "request": "launch",
            "program": "${workspaceFolder}/obj/linux/main",
            "linux":   { "miDebuggerPath": "/usr/bin/gdb" },
            "windows": { "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe" },
        },
        {
            "preLaunchTask": "Windows build",
            "name": "Launch Windows build",
            "type": "gdb",
            "request": "launch",
            "program": "${workspaceFolder}/obj/windows/main.exe",
            "linux":   { "miDebuggerPath": "/usr/bin/gdb" },
            "windows": { "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe" },
        }   // If using CPPDBG, uncomment configuration lines
    ]
}
